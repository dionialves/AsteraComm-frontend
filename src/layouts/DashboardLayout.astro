---
import "../styles/global.css";
---

<html lang="pt-BR" class="h-full bg-gray-100">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard - Astro + Tailwind</title>
  </head>
  <body class="h-full flex flex-col">
    <!-- Navbar -->
    <header class="bg-white shadow-md p-4 flex items-center justify-between">
      <h1 class="text-xl font-bold text-indigo-600">Meu Sistema</h1>
      <nav>
        <ul class="flex space-x-4 text-gray-700">
          <li><a href="#" class="hover:text-indigo-600">Perfil</a></li>
          <li><a href="#" class="hover:text-indigo-600">Configurações</a></li>
          <li><a href="#" class="hover:text-indigo-600">Sair</a></li>
        </ul>
      </nav>
    </header>

    <div class="flex flex-1 min-h-0 overflow-hidden">
      <!-- Sidebar -->
      <aside class="w-64 bg-indigo-50 p-6 border-r border-indigo-200 overflow-y-auto">
        <nav class="space-y-4">
          <a href="#" class="block px-3 py-2 rounded hover:bg-indigo-200 text-indigo-700 font-semibold">Dashboard</a>
          <a href="#" class="block px-3 py-2 rounded hover:bg-indigo-200 text-indigo-700 font-semibold">Relatórios</a>
          <a href="#" class="block px-3 py-2 rounded hover:bg-indigo-200 text-indigo-700 font-semibold">Clientes</a>
          <a href="#" class="block px-3 py-2 rounded hover:bg-indigo-200 text-indigo-700 font-semibold">Suporte</a>
        </nav>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 p-8 overflow-y-auto">
        <slot />
      </main>
    </div>
  </body>
</html>

