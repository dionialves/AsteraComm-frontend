---
import Layout from "../../layouts/LayoutLogin.astro";
---

<Layout title="Login | AsteraComm">
    <div class="bg-zinc-900 flex items-center justify-center min-h-screen">
        <div class="bg-zinc-800/90 p-8 rounded-2xl shadow-lg w-full max-w-lg">
            <div class="flex flex-col items-center mb-8">
                <img src="/images/logo.png" alt="AsteraComm Logo" class="h-20" />

                <hr class="w-full border-t border-zinc-600 my-4" />

                <h1 class="text-white text-2xl font-bold">Portal AsteraComm</h1>
                <p class="text-zinc-400 text-sm">Gerenciamento Inteligente de Infraestrutura</p>
            </div>

            <form id="loginForm" class="space-y-6">
                <div>
                    <label for="username" class="block text-sm font-medium text-zinc-300">Usuário</label>
                    <input type="text" id="username" name="username" required class="w-full px-3 py-2 rounded bg-zinc-700 text-white focus:outline-none focus:ring-1 focus:ring-white" />
                </div>

                <div>
                    <label for="password" class="block text-sm font-medium text-zinc-300">Senha</label>
                    <input type="password" id="password" name="password" required class="w-full px-3 py-2 rounded bg-zinc-700 text-white focus:outline-none focus:ring-1 focus:ring-white" />
                </div>

                <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white py-2 rounded">
                    Entrar
                </button>
            </form>
        </div>
    </div>
</Layout>

<script type="module" defer>
    const form = document.querySelector('#loginForm');

    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const data = new FormData(form);

        try {
            const response = await fetch('/api/auth/login', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    username: data.get('username'),
                    password: data.get('password'),
                }),
            });

            if (!response.ok) {
                throw new Error('Login inválido');
            }

            window.location.assign('/');

        } catch (error) {
            console.error(error);
            alert('Usuário ou senha incorretos.');
        }
    });
</script>
